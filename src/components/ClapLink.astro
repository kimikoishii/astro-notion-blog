---
import NoContents from './NoContents.astro'

export interface Props {
  heading: string
}

const { heading } = Astro.props
---

<div class="clap-link">
  <h2>{heading}</h2>
    <a
        href="https://wavebox.me/wave/doa804q9oit509i1/"
    >Wavebox&#x1f44b; 
    </a>
</div>

<style>
  .clap-link {
    
  }
  .clap-link h2 {
    margin: 0;
    padding-left: 0.4rem;
    color: #777;
    font-size: 0.95rem;
  }
  .clap-link a {
    display: block;
    border-radius: var(--radius);
    padding: 0.4rem 0.4rem;
    line-height: 1.0rem;
    color: inherit;
    font-size: 0.95rem;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    background: #fff;
    font-weight: bold;
    width: fit-content;
    border: 0.5px solid #000;
  }
  .clap-link a span,
  .clap-link a img {
    display: inline-block;
    margin-right: 0.2rem;
  }
  /* .clap-link a img {
    width: 1.25rem;
    height: 1.25rem;
    vertical-align: sub;
  } */
</style>
